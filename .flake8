[flake8]
max-line-length = 110
max-complexity = 10
per-file-ignores =
    __init__.py: D100,D103,D104,W391
    tasks.py: D100,D103,D104,W391
    tests/test_*.py: D100,D103
exclude = .git,
    __pycache__,
    docs/source/conf.py,
    .venv/,
    **/__init__.py,
    old,
    build,
    dist,
    tests

